{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "dist",
    "module": "commonjs",
    "downlevelIteration": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": false,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
